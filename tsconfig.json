{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "allowJs": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "baseUrl": ".",
        "types":  ["node", "mocha", "chai"],
        "lib": [ "esnext", "dom", "es6", "es5", "es2020", "es2022"]
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
